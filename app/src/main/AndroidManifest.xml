<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.reffappdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InviterGetCode"
            android:theme="@style/AppTheme.Popups"></activity>
        <activity
            android:name=".InviteeGetCode"
            android:theme="@style/AppTheme.Popups" />
        <activity android:name=".UserUI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".KampanyaPaylas"
            android:theme="@style/AppTheme.Popups" />
        <activity
            android:name=".UserUI.FirmaSayfasi"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserUI.Home"
            android:label="@string/title_activity_home" />
        <activity android:name=".UserUI.HomePage" />
        <activity android:name=".Login.LoginActivity" />
        <activity android:name=".Login.RegisterActivity" />
        <activity
            android:name=".InviteeView"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.akillidavet.com"
                    android:scheme="http" />
                <data
                    android:host="akillidavet.com"
                    android:scheme="http" />
                <data
                    android:host="www.akillidavet.com"
                    android:scheme="https" />
                <data
                    android:host="akillidavet.com"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>