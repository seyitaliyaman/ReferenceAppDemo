<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEFFEBEE"
    tools:context=".KampanyaPaylas">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Aşağıdaki kampanya linkini arkadaşlarınızla paylaşarak indirimden faydalanabilirsiniz"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="Kampanya linki"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/kampanyaLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="654687"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facebookButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/facebookicon" />

            <ImageView
                android:id="@+id/whatsappButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/whatsappicon" />

            <ImageView
                android:id="@+id/mailButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/mailico" />

            <ImageView
                android:id="@+id/smsButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/messageicon" />

            <ImageView
                android:id="@+id/copyButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/copyicon" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>